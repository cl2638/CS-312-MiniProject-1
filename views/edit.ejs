<%- include('_header'); -%>

<h1>Edit Blog Post</h1>

<form action="/posts/<%= postId %>/edit" method="POST" class="form-horizontal">
  <div class="form-group">
    <label for="creator" class="col-sm-2 control-label">Your Name:</label>
    <div class="col-sm-10">
      <input type="text" id="creator" name="creator" class="form-control" value="<%= post.creator %>" required>
    </div>
  </div>

  <div class="form-group">
    <label for="title" class="col-sm-2 control-label">Blog Title:</label>
    <div class="col-sm-10">
      <input type="text" id="title" name="title" class="form-control" value="<%= post.title %>" required>
    </div>
  </div>

  <div class="form-group">
    <label for="content" class="col-sm-2 control-label">Blog Content:</label>
    <div class="col-sm-10">
      <textarea id="content" name="content" class="form-control" rows="6" required><%= post.content %></textarea>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-primary">Update Blog</button>
    </div>
  </div>
</form>

<%- include('_footer'); -%>
